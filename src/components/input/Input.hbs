  <input
    id="{{id}}"
    type="{{type}}"
    name="{{name}}"
    class="form__input"
    placeholder="{{placeholder}}"
    value="{{value}}"
    {{#if required}}required{{/if}}
    {{#if minlength}}minlength="{{minlength}}"{{/if}}
    {{#if maxlength}}maxlength="{{maxlength}}"{{/if}}
    autocomplete="off"
  />